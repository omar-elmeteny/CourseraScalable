{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Science Quiz",
  "properties": {
    "quiz": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string"
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "answer": {
                "type": "string"
              }
            },
            "required": ["question", "options", "answer"]
          }
        }
      },
      "required": ["title", "questions"]
    }
  },
  "required": ["quiz"]
}
